<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Ripple color -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="45dp" /> <!-- Mask radius slightly larger than image radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Optional: Add a subtle background color if needed -->
            <!-- <solid android:color="@color/bgColor"/> -->
            <corners android:radius="45dp" /> <!-- Match mask radius -->
        </shape>
    </item>
</ripple>