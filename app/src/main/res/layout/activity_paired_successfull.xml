<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#EFF6F7F8"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".paired_successfull">

    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success_check"

        android:layout_marginBottom="24dp"
        android:contentDescription="Pairing Successful Icon" />

    <TextView
        android:id="@+id/paired"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Paired Successfully!ðŸŽ‰"
        android:textColor="#038175"
        android:textSize="28sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/subMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're all set to go."
        android:textColor="#546E7A"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="-5dp"
        android:fontFamily="sans-serif"
        />

</LinearLayout>